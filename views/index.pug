extends layout

block content
  h1= title
  p Welcome to #{title}
  p Welcome to Anushka's Server
  button(type="button", class="btn btn-secondary", onclick="boost()") Sample
  div(id="boost") Add in extra.
  a(href="/artifacts") View Artifacts Search Results

  script.
    let value = 0;
    let amt = 3;
   
    function boost() {
      amt += 1;
      value += amt;
      document.getElementById("boost").innerText = `Boosted ${value} by ${amt}.`;
    }
 
  if (!user)
    br
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/artifacts") Take me to artifacts
    br
    a(href="/logout") Logout